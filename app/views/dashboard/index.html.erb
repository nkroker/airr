<h4>Average AQI</h4>

<%= column_chart @average_aqi,
  title: "All time Average AQI by City names",
  colors: ['blue'],
  library: {
    tooltip: {
      pointFormat: 'Times Bought: <b>{point.y}</b>'
    }
  }
%>

<hr>
<%= form_with url: show_city_aqi_dashboard_index_path(format: :json), id: 'location-form', method: :get, data: { controller: 'chart-update' } do |form| %>
  <%= form.select :location, Location.all.map { |location| [location.name, location.id] }, selected: @location.id, prompt: 'Select a location' %>
  <%= form.submit 'Submit' %>
<% end %>

<div id="location-chart">
  <%= bar_chart @average_aqi_singular,
    title: 'Average AQI by selected City',
    colors: ['blue'],
    library: {
      tooltip: {
        pointFormat: 'Times Bought: <b>{point.y}</b>'
      }
    }
  %>
</div>
